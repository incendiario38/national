extends layout

block content
    h1= title
    div(class="row")
        div(class="col-md-4")
            h2 Create user

            form(action="/api/users/create", method="post", class="well")
                div(class="form-group")
                    label(for="firstName")
                        | First Name
                    input(type="text", name="firstName", id="firstName" class="form-control")
                div(class="form-group")
                    label(for="lastName")
                        | Last Name
                    input(type="text", name="lastName", id="lastName" class="form-control")
                div(class="form-group")
                    label(for="patronymic")
                        | patronymic
                    input(type="text", name="patronymic", id="patronymic" class="form-control")
                div(class="form-group")
                    label(for="email")
                        | email
                    input(type="text", name="email", id="email" class="form-control")
                div(class="form-group")
                    label(for="phone")
                        | Phone
                    input(type="text", name="phone", id="phone" class="form-control")
                div(class="form-group")
                    label(for="address")
                        | address
                    input(type="text", name="address", id="address" class="form-control")
                div(class="form-group")
                    label(for="postcode")
                        | postcode
                    input(type="number", name="postcode", id="postcode" class="form-control")
                div(class="form-group")
                    label(for="password")
                        | password
                    input(type="password", name="password", id="password" class="form-control")

                input(type="submit" class="btn btn-default")

        div(class="col-md-6")
            h2 Users

            table(class="table")
                thead
                    tr
                        td First Name
                        td Last Name
                        td Patronymic
                        td Email
                        td Phone
                        td Address
                        td Postcode
                        td
                tbody
                each user in users
                    tr
                        td= user.firstName
                        td= user.lastName
                        td= user.patronymic
                        td= user.email
                        td= user.phone
                        td= user.address
                        td= user.postcode
                        td
                            a(href="/api/users/" + user.id + "/remove", class="btn btn-sm btn-warning") Remove
